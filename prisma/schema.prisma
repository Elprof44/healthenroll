datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  roles         Role[]
  posts         Post[]
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String
  image    String?
  authorId Int
  author   User    @relation(fields: [authorId], references: [id])
}
